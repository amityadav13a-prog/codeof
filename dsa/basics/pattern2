*/
 #include <iostream>
using namespace std;
void printp(int n){
    for(int i=0;i<n;i++)
   {
    for(int j=0;j<=(i);j++)
     {cout<<" ";
    }for(int j=0;j<(2*n-(2*i+1));j++){cout<<"*";}
    for(int j=0;j<=(i);j++)
     {cout<<" ";
    } 
    cout<<"\n";
   }
}
int main(){int t;
    cin>>t;
for(int i=0;i<t;i++){
    int n;
    cin>>n;
    printp(n);}
    return 0;}
